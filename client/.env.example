# API настройки
VITE_API_URL=http://localhost:3001
VITE_WS_URL=ws://localhost:3001/ws

# Tauri настройки разработки
TAURI_DEV_WATCHER_DEBOUNCE=200
TAURI_DEV_WATCHER_POLL_INTERVAL=100

# Настройки записи
VITE_MAX_RECORDING_TIME=300000
VITE_AUDIO_QUALITY=high
VITE_NOISE_REDUCTION=true

# Настройки интерфейса
VITE_THEME=default
VITE_LANGUAGE=ru
VITE_ENABLE_ANIMATIONS=true

# Функциональные флаги
VITE_ENABLE_REAL_TIME_TRANSCRIPTION=true
VITE_ENABLE_AI_POSTPROCESSING=true
VITE_ENABLE_EXPORT_FEATURES=true

# Локальное хранилище
VITE_STORAGE_ENCRYPTION=true
VITE_MAX_STORED_RECORDINGS=100

# Отладка
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=warn