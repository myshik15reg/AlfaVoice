{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AlfaVoice",
  "version": "0.1.0",
  "identifier": "com.alfavoice.app",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:3003",
    "beforeDevCommand": "npm run dev -- --port 3003",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "AlfaVoice",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
